<h2>Sign in</h2>

<div class="row">
  <div class="col-md-8">
    <%= simple_form_for :session, url: sessions_path do |f| %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :remember_me, as: :check_boxes %>
    <%= f.button :submit, "Sign In", class: 'btn-success' %>
    <% end %>
  </div>
</div>