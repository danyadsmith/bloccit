<h2>Sign up</h2>

<div class="row">
  <div class="col-md-8">
    <%= simple_form_for @user do |f| %>
    <%= f.input :name, autofocus: true %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.button :submit, class: 'btn-success' %>
    <% end %>
  </div>
</div>